<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">

      <div class="mt-3">
        <h1>Login</h1>
      </div>

      <%= form_tag '/login' do %>      

      <div class="form-group row mt-3">
        <%= label :email, "Email:" %>
        <%= text_field_tag :email %>
      </div>

      <div class="form-group row mt-3">
        <%= label :password, "Password:" %>
        <%= password_field_tag :password %>
      </div>
     

      <div class= "form-group row mt-3">
        <%= submit_tag "Sign in", class: "btn btn-success" %>
      </div>

      <% end %>

    </div>
  </div>
</div>