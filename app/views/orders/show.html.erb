<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="order-details">
    <h2>Order Details:</h2>
    <% @order.line_items.each do |line_item| %>
      <div class="line-item">
        <%= image_tag line_item.product.image.url, alt: line_item.product.name, class: 'product-image' %>
        <div class="product-info">
          <h3><%= line_item.product.name %></h3>
          <p><%= line_item.product.description %></p>
        </div>
        <div class="line-item-details">
          <p>Quantity: <%= line_item.quantity %></p>
          <p>Line Item Total: <%= humanized_money_with_symbol(line_item.total_price) %></p>
        </div>
      </div>
    <% end %>
    <div class="order-total">
      <h3>Total Amount: <%= humanized_money_with_symbol(Money.new(@order.total_cents)) %></h3>
    </div>
    <div class="order-email">
      <h3>Email: <%= @order.email %></h3>
    </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>