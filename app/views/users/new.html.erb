<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">

      <div class="mt-3">
        <h1>Sign Up!</h1>
      </div>

      <%= form_for :user, url: '/users' do |f| %>  

      <div class="form-group row mt-3">
        <%= f.label :first_name, "First Name:" %>
        <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your First Name" %>
      </div>

      <div class="form-group row mt-3">
        <%= f.label :last_name, "Last Name:" %>
        <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your Last Name" %>
      </div>

      <div class="form-group row mt-3">
        <%= f.label :email, "Email:" %>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter your Email" %>
      </div>

      <div class="form-group row mt-3">
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="form-group row mt-3">
        <%= f.label :password, "Confirm Password:" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Confirm your password" %>
      </div>

      <div class= "form-group row mt-3">
        <%= f.submit "Sign Up", class: "btn btn-success" %>
      </div>

      <% end %>

    </div>
  </div>
</div>